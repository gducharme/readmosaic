{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "seedpipe://spec/stages/reviewer_pass/reviewed_rewrites.schema.json",
  "title": "SlopStopReviewedRewrite",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "item_id",
      "paragraph_id",
      "status",
      "review_decision",
      "reasons",
      "original_text",
      "suggested_text"
    ],
    "properties": {
      "item_id": {
        "type": "string",
        "pattern": "^p-[0-9]{4,}$"
      },
      "paragraph_id": {
        "type": "string",
        "pattern": "^p-[0-9]{4,}$"
      },
      "status": {
        "type": "string",
        "enum": ["reviewed"]
      },
      "review_decision": {
        "type": "string",
        "enum": ["approve", "reject"]
      },
      "reasons": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "original_text": {
        "type": "string"
      },
      "suggested_text": {
        "type": "string"
      }
    }
  }
}
