{
  "$id": "seedpipe://spec/stages/resolve_entities/resolution_plan.schema.json",
  "type": "object",
  "required": ["run_id", "resolved_entities", "new_entities", "conflicts", "warnings"],
  "properties": {
    "run_id": {"type": "string"},
    "resolved_entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["temp_id", "uuid", "match_source"],
        "properties": {
          "temp_id": {"type": "string"},
          "uuid": {"type": "string"},
          "match_source": {"type": "string"}
        }
      }
    },
    "new_entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["temp_id", "uuid", "name", "type"],
        "properties": {
          "temp_id": {"type": "string"},
          "uuid": {"type": "string"},
          "name": {"type": "string"},
          "type": {"type": "string"}
        }
      }
    },
    "conflicts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["temp_id", "reason"],
        "properties": {
          "temp_id": {"type": "string"},
          "reason": {"type": "string"},
          "candidate_uuid": {"type": ["string", "null"]}
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "details"],
        "properties": {
          "type": {"type": "string"},
          "temp_id": {"type": "string"},
          "entity_name": {"type": "string"},
          "candidate_uuid": {"type": ["string", "null"]},
          "details": {"type": "string"}
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "exact_resolved": {"type": "integer"},
        "auto_corrected_is_new": {"type": "integer"},
        "fuzzy_conflicts": {"type": "integer"},
        "created_new": {"type": "integer"},
        "name_promotions": {"type": "integer"}
      }
    }
  }
}
