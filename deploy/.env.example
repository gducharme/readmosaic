# Arweave (required)
# required: yes, format: 43-char base64url txid, placeholders like "changeme" are rejected
ARWEAVE_TXID_GENESIS=<required_arweave_txid_genesis>
ARWEAVE_TXID_MANIFESTO_AR=<required_arweave_txid_manifesto_ar>
ARWEAVE_TXID_MANIFESTO_EN=<required_arweave_txid_manifesto_en>
ARWEAVE_TXID_MANIFESTO_ZH=<required_arweave_txid_manifesto_zh>

# Bitcoin anchor (required)
# required: yes, unit: block height, valid range: 0..10000000
BTC_ANCHOR_HEIGHT=<required_btc_anchor_height>

# Server listener (optional/defaulted)
# required: no, default: :2222
LISTEN_ADDR=:2222

# Neo4j (optional at boot)
# required: no, but if NEO4J_URI is set then both NEO4J_USER and NEO4J_PASSWORD are required
NEO4J_PASSWORD=<optional_neo4j_password>
NEO4J_URI=<optional_neo4j_uri>
NEO4J_USER=<optional_neo4j_user>

# Request rate limiting (optional/defaulted)
# RATE_LIMIT_PER_MIN required: no, default: 30, valid range: 1..1000000 requests/minute
# RATE_LIMIT_BURST required: no, default: 10, valid range: 1..1000000 requests
RATE_LIMIT_BURST=10
RATE_LIMIT_PER_MIN=30
