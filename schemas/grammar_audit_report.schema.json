{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/grammar_audit_report.schema.json",
  "title": "Grammar Audit Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tool",
    "input_file",
    "prompt_file",
    "model",
    "flags",
    "status",
    "issues",
    "summary",
    "generated_at"
  ],
  "properties": {
    "tool": {
      "const": "ultra_precision_grammar_auditor"
    },
    "input_file": {
      "type": "string",
      "minLength": 1
    },
    "prompt_file": {
      "type": "string",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "minLength": 1
    },
    "flags": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "include_optional_preferences",
        "include_style_choices",
        "include_register_consistency",
        "include_ambiguities",
        "strict_cmos",
        "clause_level_parse"
      ],
      "properties": {
        "include_optional_preferences": { "type": "boolean" },
        "include_style_choices": { "type": "boolean" },
        "include_register_consistency": { "type": "boolean" },
        "include_ambiguities": { "type": "boolean" },
        "strict_cmos": { "type": "boolean" },
        "clause_level_parse": { "type": "boolean" }
      }
    },
    "status": {
      "type": "string",
      "enum": ["ok", "sound", "error"]
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "sentence_index",
          "sentence_text",
          "phrase",
          "issue_type",
          "severity",
          "classification",
          "rule",
          "explanation",
          "minimal_correction",
          "confidence"
        ],
        "properties": {
          "sentence_index": { "type": "integer", "minimum": 1 },
          "sentence_text": { "type": "string", "minLength": 1 },
          "phrase": { "type": "string", "minLength": 1 },
          "issue_type": {
            "type": "string",
            "enum": [
              "Structural Grammar",
              "Punctuation Precision",
              "Determiner & Article Accuracy",
              "Preposition Selection",
              "Lexical Grammar",
              "Ambiguity Detection",
              "Register Consistency"
            ]
          },
          "severity": {
            "type": "string",
            "enum": ["Critical", "Major", "Minor", "House Style"]
          },
          "classification": {
            "type": "string",
            "enum": ["Error", "Ambiguity", "Stylistic choice", "Optional preference"]
          },
          "rule": { "type": "string", "minLength": 1 },
          "explanation": { "type": "string", "minLength": 1 },
          "minimal_correction": { "type": "string", "minLength": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "clause_parse": { "type": "string" }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_issues",
        "critical",
        "major",
        "minor",
        "house_style"
      ],
      "properties": {
        "total_issues": { "type": "integer", "minimum": 0 },
        "critical": { "type": "integer", "minimum": 0 },
        "major": { "type": "integer", "minimum": 0 },
        "minor": { "type": "integer", "minimum": 0 },
        "house_style": { "type": "integer", "minimum": 0 }
      }
    },
    "note": { "type": "string" },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
