{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/manifest.schema.json",
  "title": "translation toolchain manifest.json",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "document_id",
    "source_language",
    "target_language",
    "created_at",
    "artifacts"
  ],
  "properties": {
    "schema_version": {
      "$ref": "defs.schema.json#/$defs/schema_version"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "document_id": {
      "type": "string",
      "minLength": 1
    },
    "source_language": {
      "$ref": "defs.schema.json#/$defs/language_code"
    },
    "target_language": {
      "$ref": "defs.schema.json#/$defs/language_code"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "pipeline_version": {
      "type": "string"
    },
    "artifacts": {
      "type": "object",
      "required": [
        "paragraph_state",
        "paragraph_scores",
        "rework_queue",
        "candidate_map",
        "normalized_review"
      ],
      "properties": {
        "paragraph_state": {
          "type": "string",
          "const": "state/paragraph_state.jsonl"
        },
        "paragraph_scores": {
          "type": "string",
          "const": "state/paragraph_scores.jsonl"
        },
        "rework_queue": {
          "type": "string",
          "const": "state/rework_queue.jsonl"
        },
        "candidate_map": {
          "type": "string",
          "const": "final/candidate_map.jsonl"
        },
        "normalized_review": {
          "type": "string",
          "const": "review/normalized/*.jsonl"
        }
      },
      "additionalProperties": false
    },
    "counts": {
      "type": "object",
      "properties": {
        "paragraphs_total": {
          "type": "integer",
          "minimum": 0
        },
        "paragraphs_approved": {
          "type": "integer",
          "minimum": 0
        },
        "paragraphs_rework": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
