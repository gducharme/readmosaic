{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/rework_queue_row.schema.json",
  "title": "state/rework_queue.jsonl row",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "document_id",
    "paragraph_index",
    "candidate_content_hash",
    "state",
    "reason_codes",
    "queued_at"
  ],
  "properties": {
    "schema_version": {
      "$ref": "defs.schema.json#/$defs/schema_version"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "document_id": {
      "type": "string",
      "minLength": 1
    },
    "paragraph_index": {
      "$ref": "defs.schema.json#/$defs/paragraph_index"
    },
    "candidate_content_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    },
    "state": {
      "type": "string",
      "const": "rework_required"
    },
    "reason_codes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "low_adequacy",
          "low_fluency",
          "terminology_violation",
          "style_violation",
          "policy_violation",
          "human_flag"
        ]
      },
      "uniqueItems": true
    },
    "priority": {
      "$ref": "defs.schema.json#/$defs/priority_level"
    },
    "details": {
      "type": "string"
    },
    "queued_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
