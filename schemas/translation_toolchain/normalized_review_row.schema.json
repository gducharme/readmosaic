{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/normalized_review_row.schema.json",
  "title": "review/normalized/*.jsonl row",
  "type": "object",
  "required": [
    "paragraph_id",
    "scores",
    "issues",
    "blocking_issues",
    "hard_fail",
    "issue_count",
    "critical_count",
    "blocker_count"
  ],
  "properties": {
    "paragraph_id": {
      "$ref": "defs.schema.json#/$defs/paragraph_id"
    },
    "content_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    },
    "scores": {
      "$ref": "defs.schema.json#/$defs/score_payload"
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "issue_id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          },
          "reviewer": {
            "type": "string"
          },
          "mapping_status": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "blocking_issues": {
      "$ref": "defs.schema.json#/$defs/string_list"
    },
    "hard_fail": {
      "type": "boolean"
    },
    "issue_count": {
      "type": "integer",
      "minimum": 0
    },
    "critical_count": {
      "type": "integer",
      "minimum": 0
    },
    "blocker_count": {
      "type": "integer",
      "minimum": 0
    },
    "run_level_blocker": {
      "type": "boolean"
    },
    "run_level_blocker_reason": {
      "type": "string",
      "minLength": 1
    },
    "run_level_blocker_detail": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
