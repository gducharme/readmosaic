{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/normalized_review_row.schema.json",
  "title": "review/normalized/*.jsonl row",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "document_id",
    "paragraph_index",
    "reviewer",
    "review_outcome",
    "reviewed_candidate_hash",
    "state_after_review",
    "findings",
    "reviewed_at"
  ],
  "properties": {
    "schema_version": {
      "$ref": "defs.schema.json#/$defs/schema_version"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "document_id": {
      "type": "string",
      "minLength": 1
    },
    "paragraph_index": {
      "$ref": "defs.schema.json#/$defs/paragraph_index"
    },
    "reviewer": {
      "type": "string",
      "minLength": 1
    },
    "review_outcome": {
      "type": "string",
      "enum": [
        "accept",
        "accept_with_notes",
        "rework",
        "reject"
      ]
    },
    "reviewed_candidate_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    },
    "state_after_review": {
      "$ref": "defs.schema.json#/$defs/paragraph_state"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code",
          "severity"
        ],
        "properties": {
          "code": {
            "type": "string",
            "minLength": 1
          },
          "severity": {
            "$ref": "defs.schema.json#/$defs/severity"
          },
          "message": {
            "type": "string"
          },
          "span": {
            "type": "object",
            "description": "Offsets over candidate text in Unicode code points, encoded as [start, start + length).",
            "required": [
              "start",
              "length"
            ],
            "properties": {
              "start": {
                "type": "integer",
                "minimum": 0
              },
              "length": {
                "type": "integer",
                "minimum": 0
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "review_notes": {
      "type": "string"
    },
    "reviewed_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
