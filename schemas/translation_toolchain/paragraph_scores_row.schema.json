{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/paragraph_scores_row.schema.json",
  "title": "state/paragraph_scores.jsonl row",
  "type": "object",
  "required": [
    "paragraph_id",
    "status",
    "attempt",
    "scores",
    "blocking_issues",
    "updated_at"
  ],
  "properties": {
    "paragraph_id": {
      "$ref": "defs.schema.json#/$defs/paragraph_id"
    },
    "status": {
      "$ref": "defs.schema.json#/$defs/paragraph_status"
    },
    "attempt": {
      "type": "integer",
      "minimum": 0
    },
    "scores": {
      "$ref": "defs.schema.json#/$defs/score_payload"
    },
    "blocking_issues": {
      "$ref": "defs.schema.json#/$defs/string_list"
    },
    "updated_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "review_state": {
      "type": [
        "string",
        "null"
      ]
    },
    "routing_state": {
      "type": [
        "string",
        "null"
      ]
    },
    "transition_trace": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "additionalProperties": false
}
