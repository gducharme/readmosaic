{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/paragraph_scores_row.schema.json",
  "title": "state/paragraph_scores.jsonl row",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "document_id",
    "paragraph_index",
    "candidate_content_hash",
    "state",
    "scores",
    "scored_at"
  ],
  "properties": {
    "schema_version": {
      "$ref": "defs.schema.json#/$defs/schema_version"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "document_id": {
      "type": "string",
      "minLength": 1
    },
    "paragraph_index": {
      "$ref": "defs.schema.json#/$defs/paragraph_index"
    },
    "candidate_content_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    },
    "state": {
      "$ref": "defs.schema.json#/$defs/paragraph_state"
    },
    "scores": {
      "type": "object",
      "required": [
        "adequacy",
        "fluency"
      ],
      "properties": {
        "adequacy": {
          "$ref": "defs.schema.json#/$defs/unit_interval_number"
        },
        "fluency": {
          "$ref": "defs.schema.json#/$defs/unit_interval_number"
        },
        "terminology": {
          "$ref": "defs.schema.json#/$defs/unit_interval_number"
        },
        "style": {
          "$ref": "defs.schema.json#/$defs/unit_interval_number"
        },
        "composite": {
          "$ref": "defs.schema.json#/$defs/unit_interval_number"
        }
      },
      "additionalProperties": {
        "$ref": "defs.schema.json#/$defs/unit_interval_number"
      }
    },
    "thresholds": {
      "type": "object",
      "additionalProperties": {
        "$ref": "defs.schema.json#/$defs/unit_interval_number"
      }
    },
    "scored_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
