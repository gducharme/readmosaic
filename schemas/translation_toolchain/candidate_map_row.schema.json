{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/candidate_map_row.schema.json",
  "title": "final/candidate_map.jsonl row",
  "type": "object",
  "required": [
    "paragraph_id",
    "paragraph_index",
    "start_line",
    "end_line"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1,
      "description": "Optional traceability field. Not guaranteed; manifest.json remains canonical run linkage."
    },
    "document_id": {
      "type": "string",
      "minLength": 1,
      "description": "Optional traceability field. Not guaranteed; manifest.json remains canonical document linkage."
    },
    "paragraph_id": {
      "$ref": "defs.schema.json#/$defs/paragraph_id"
    },
    "paragraph_index": {
      "$ref": "defs.schema.json#/$defs/paragraph_index"
    },
    "start_line": {
      "$ref": "defs.schema.json#/$defs/line_number"
    },
    "end_line": {
      "$ref": "defs.schema.json#/$defs/line_number"
    },
    "content_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    }
  },
  "description": "Line ranges are inclusive and runtime-enforced such that end_line >= start_line.",
  "additionalProperties": false
}
