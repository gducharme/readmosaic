{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://readmosaic/schemas/translation_toolchain/candidate_map_row.schema.json",
  "title": "final/candidate_map.jsonl row",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "document_id",
    "paragraph_index",
    "source_content_hash",
    "selected_candidate_hash",
    "target_language",
    "selection_outcome",
    "selected_at"
  ],
  "properties": {
    "schema_version": {
      "$ref": "defs.schema.json#/$defs/schema_version"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "document_id": {
      "type": "string",
      "minLength": 1
    },
    "paragraph_index": {
      "$ref": "defs.schema.json#/$defs/paragraph_index"
    },
    "source_content_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    },
    "selected_candidate_hash": {
      "$ref": "defs.schema.json#/$defs/content_hash"
    },
    "target_language": {
      "$ref": "defs.schema.json#/$defs/language_code"
    },
    "selection_outcome": {
      "$ref": "defs.schema.json#/$defs/selection_outcome"
    },
    "selection_reason": {
      "type": "string",
      "minLength": 1
    },
    "selected_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
